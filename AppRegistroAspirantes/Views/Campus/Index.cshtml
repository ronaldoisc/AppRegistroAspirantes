
@using AppRegistroAspirantes.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<CampusModel> campus = (List<CampusModel>)ViewBag.campus;
}

<div>
    <div class="card shadow mb-4">
        @*<div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Campus</h6>
            </div>*@
        <div class="card-body">
            <h1 class="h4 mb-2 text-gray-800 font-weight-bold">Campus registrados</h1>
            <hr class="my-3" />
            <div class="table-responsive mt-2">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Sitio web</th>
                            <th>No. aspirantes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CampusModel cmp in campus)
                        {
                            <tr>
                                @*<td>@Html.ActionLink(cmp.Nombre, "Actualizar", "Campus", new { id = cmp.Id })</td>*@
                                <td><a href="/Campus/Ver/@cmp.Id">@cmp.Nombre</a></td>
                                <td>@cmp.Correo</td>
                                <td>@cmp.Telefono</td>
                                <td>@cmp.UrlCampus</td>
                                <td>@cmp.NumAspirantes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
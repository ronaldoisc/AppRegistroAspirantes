@using AppRegistroAspirantes.Models
@model SolicitanteModel
@{
    ViewBag.Title = "Ver";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="viewport-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb has-arrow">
            <li class="breadcrumb-item">
                <a href="/Admin/Index">Inicio</a>
                <i class="fas fa-chevron-right breadcrumb-icon"></i>
            </li>
            <li class="breadcrumb-item">
                <a href="/Solicitante/ListaSolicitantes">Lista de Solicitantes</a>
                <i class="fas fa-chevron-right breadcrumb-icon"></i>
            </li>
            <li class="breadcrumb-item active"
                aria-current="page">Información de Solicitante</li>
        </ol>
    </nav>
</div>

<div class="row gutters-sm">
    <div class="col-md-4 mb-3">
        <div class="card shadow">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="@Url.Action("GetImg", "Solicitante", new { id = Model.Id.ToString() })" alt="Admin" class="rounded-circle"
                         width="150">
                    <div class="mt-3">
                        <h4>@Model.Nombre</h4>
                        <p class="text-secondary mb-1">@Model.Localidad, @Model.Pais</p>
                        <p class="text-muted font-size-sm">@Model.Carrera</p>
                        <a href="mailto:@Model.Correo" class="btn btn-primary btn-block btn-sm">Enviar Correo</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-3 shadow">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap mt-2">
                    <h1 class="h5 text-gray-800 font-weight-bold">Datos de Contacto</h1>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0 text-gray-800 font-weight-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-at" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#5A5C69" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <circle cx="12" cy="12" r="4" />
                            <path d="M16 12v1.5a2.5 2.5 0 0 0 5 0v-1.5a9 9 0 1 0 -5.5 8.28" />
                        </svg> Correo
                    </h6>
                    <span class="text-secondary">@Model.Correo</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0 text-gray-800 font-weight-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-phone" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#5A5C69" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
                        </svg> Teléfono Fijo
                    </h6>
                    <span class="text-secondary">@Model.TelefonoFijo</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0 text-gray-800 font-weight-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-device-mobile" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#5A5C69" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <rect x="7" y="4" width="10" height="16" rx="1" />
                            <line x1="11" y1="5" x2="13" y2="5" />
                            <line x1="12" y1="17" x2="12" y2="17.01" />
                        </svg> Teléfono Celular
                    </h6>
                    <span class="text-secondary">@Model.TelefonoCelular</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0 text-gray-800 font-weight-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-map-pin" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#5A5C69" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <circle cx="12" cy="11" r="3" />
                            <path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z" />
                        </svg> Ubicación
                    </h6>
                    <span class="text-secondary">@Model.Localidad, @Model.Pais</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card mb-3 shadow">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-12">
                        <h1 class="h5 text-gray-800 font-weight-bold">Datos del Solicitante</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0 text-gray-800 font-weight-bold">Nombre(s):</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.Nombre
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0 text-gray-800 font-weight-bold">Apellido Paterno:</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.ApellidoPaterno
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0 text-gray-800 font-weight-bold">Apellido Materno:</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.ApellidoMaterno
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0 text-gray-800 font-weight-bold">Género:</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.Genero
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0 text-gray-800 font-weight-bold">Fecha de Nacimiento:</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.FechaNacimiento
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0 text-gray-800 font-weight-bold">CURP:</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.CURP
                    </div>
                </div>
            </div>
        </div>

        <div class="row gutters-sm">
            <div class="col-sm-6 mb-3">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <h1 class="h5 text-gray-800 font-weight-bold">Información Académica:</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="mb-0 text-gray-800 font-weight-bold">Último grado de estudios:</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-secondary">
                                @Model.GradoEstudios
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="mb-0 text-gray-800 font-weight-bold">Escuela de procedencia:</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-secondary">
                                @Model.EscuelaProcedencia
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="mb-0 text-gray-800 font-weight-bold">Cerfticidado de Bachillerato:</h6>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-sm-5 mt-3">
                                <a href="#" class="btn btn-outline-primary btn-block btn-sm">Ver</a>
                            </div>
                            <div class="col-sm-5 mt-3">
                                <a href="#" class="btn btn-outline-primary btn-block btn-sm">Descargar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 mb-3">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <h1 class="h5 text-gray-800 font-weight-bold">Información de Registro:</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="mb-0 text-gray-800 font-weight-bold">Campus Asignado:</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-secondary">
                                <a href="/Campus/Ver/@Model.IdCampus">@Model.CampusAsignado</a>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="mb-0 text-gray-800 font-weight-bold">Carrera Elegida:</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-secondary">
                                @Model.Carrera
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="mb-0 text-gray-800 font-weight-bold">Estatus de Pago:</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-secondary">
                                @((Model.EstatusPago == true) ? "Pagado" : "Pendiente de Pago")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <h6 class="mb-0 text-gray-800 font-weight-bold">Identificación Oficial:</h6>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-sm-5 mt-3">
                                <a href="#" class="btn btn-outline-primary btn-block btn-sm">Ver</a>
                            </div>
                            <div class="col-sm-5 mt-3">
                                <a href="#" class="btn btn-outline-primary btn-block btn-sm">Descargar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@using AppRegistroAspirantes.Models;
@model SolicitanteModel
@{
    ViewBag.Title = "DatosPersonales";
    List<SelectListItem> listaGeneros = ViewBag.listaGeneros;
    List<SelectListItem> listaGradosEstudio = ViewBag.listaGradosEstudio;
}
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/MisEstilos.css" rel="stylesheet" />



<div class="container mb-2">
    <ul class="contenedor-steps">
        <li class="step">
            <strong>1</strong>
            <span>Datos Personales</span>
            <i class="fa fa-angle-right" aria-hidden="true"></i>

        </li>
        <li class="step">
            <strong>2</strong>
            <span>Elección Carrera</span>
            <i class="fa fa-angle-right" aria-hidden="true"></i>

        </li>

        <li class="step">
            <strong>3</strong>
            <span>Elección Campus</span>
            <i class="fa fa-angle-right" aria-hidden="true"></i>

        </li>
    </ul>

    @using (Html.BeginForm("Registrar", "Solicitante", FormMethod.Post, new { enctype = "multipart/form-data", id = "regForm" }))
    {


        <div class="tab">
            <h2>Datos Personales</h2>
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(p => p.Nombre, new { @class = "col-form-label font-size-small font-weight-bolder" })
                        <input type="text" name="Nombre" id="Nombre" class="form-control outline-none bg-light shadow-none" />

                        @Html.ValidationMessage("Nombre", new { @class = "text-danger" })
                    </div>

                    <div class="form-group ">
                        @Html.LabelFor(p => p.ApellidoMaterno, new { @class = "col-form-label font-size-small font-weight-bolder" })
                        @Html.TextBoxFor(p => p.ApellidoMaterno, new { @class = "form-control  outline-none bg-light shadow-none", autocomplete = "off", })
                        @Html.ValidationMessage("ApellidoMaterno", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="form-group ">
                        @Html.LabelFor(p => p.ApellidoPaterno, new { @class = "col-form-label font-size-small font-weight-bolder" })
                        @Html.TextBoxFor(p => p.ApellidoPaterno, new { @class = "form-control bg-light outline-none  shadow-none", autocomplete = "off", })
                        @Html.ValidationMessage("ApellidoPaterno", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(p => p.IdGenero, new { @class = "col-form-label font-size-small font-weight-bolder" })
                        @Html.DropDownList("IdGenero", listaGeneros, null, new { @class = "form-control input-size-small bg-light outline-none shadow-none", id = "selectPaises" })
                        @Html.ValidationMessage("IdGenero", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(p => p.Correo, new { @class = "col-form-label font-size-small font-weight-bolder" })
                        @Html.EditorFor(p => p.Correo, new { htmlAttributes = new { @class = "form-control input-size-small bg-light outline-none shadow-none" } })
                        @Html.ValidationMessage("Correo", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="col-12 col-md-6">

                    <div class="form-group">
                        @Html.LabelFor(p => p.FechaNacimiento, new { @class = "form-label" })
                        @Html.EditorFor(p => p.FechaNacimiento, new { htmlAttributes = new { @class = "form-control mb-2" } })
                        @Html.ValidationMessage("FechaNacimiento", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        @Html.LabelFor(p => p.CURP, new { @class = "col-form-label font-size-small font-weight-bolder" })
                        @Html.EditorFor(p => p.CURP, new { htmlAttributes = new { @class = "form-control input-size-small bg-light outline-none shadow-none" } })
                        @Html.ValidationMessage("CURP", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="mt-3">
                        <label>País</label>
                        <select id="paises" class="form-control bg-light outline-none  shadow-none" name="IdPais">
                            <option value="">--Seleccione el país--</option>
                        </select>
                    </div>

                </div>
                <div class="col-12 col-md-3">
                    @Html.LabelFor(p => p.CodigoPostal, new { @class = "col-form-label font-size-small font-weight-bolder" })
                    @Html.TextBoxFor(p => p.CodigoPostal, new { @class = "form-control bg-light outline-none  shadow-none", id = "codigoPostal" })
                </div>
                <div class="col-12 col-md-5">
                    <div class="mt-3">
                        @Html.LabelFor(p => p.IdLocalidad)
                        <select id="localidades" class="form-control form-control bg-light outline-none  shadow-none" name="IdLocalidad">
                            <option value="">--Seleccione la localidad--</option>
                        </select>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(p => p.TelefonoFijo, new { @class = "col-form-label font-size-small font-weight-bolder" })

                        @Html.TextBoxFor(p => p.TelefonoFijo, new { @class = "form-control bg-light outline-none  shadow-none", autocomplete = "off" })
                        @Html.ValidationMessage("TelefonoFijo", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(p => p.TelefonoCelular, new { @class = "col-form-label font-size-small font-weight-bolder" })

                        @Html.TextBoxFor(p => p.TelefonoCelular, new { @class = "form-control bg-light outline-none  shadow-none", autocomplete = "off" })
                        @Html.ValidationMessage("TelefonoCelular", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="form-group ">
                        @Html.LabelFor(p => p.IdGradoEstudios, new { @class = "col-form-label font-size-small font-weight-bolder" })

                        @Html.DropDownList("IdGradoEstudios", listaGradosEstudio, null, new { @class = "form-control bg-light outline-none  shadow-none", id = "selectPaises" })
                        @Html.ValidationMessage("IdGradoEstudios", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(p => p.EscuelaProcedencia, new { @class = "col-form-label font-size-small font-weight-bolder" })

                        @Html.TextBoxFor(p => p.EscuelaProcedencia, new { @class = "form-control bg-light outline-none  shadow-none", autocomplete = "off" })
                        @Html.ValidationMessage("EscuelaProcedencia", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-12">
                    @Html.LabelFor(p => p.Imagen, new { @class = "text-sm-right col-sm-3 col-form-label font-size-small font-weight-bolder" })
                    <input type="file" name="Imagen" id="Imagen" />
                </div>

                <div class="col-12">
                    @Html.LabelFor(p => p.INE, new { @class = "text-sm-right col-sm-3 col-form-label font-size-small font-weight-bolder" })
                    <input type="file" name="INE" id="INE" />
                </div>

                <div class="col-12">
                    @Html.LabelFor(p => p.Certificado, new { @class = "text-sm-right col-sm-3 col-form-label font-size-small font-weight-bolder" })
                    <input type="file" name="Certificado" id="Certificado" />
                </div>


            </div>
        </div>

        <div class="tab">
            <h2>Elección de Carrera</h2>
            <div class="row">
                @foreach (var carreras in Model.carreras)
                {

                    <div class="col-sm-3" id="dataTable">
                        <div class="card mb-3">
                            <img src="@Url.Action("GetImgCarreras", "Solicitante", new { id = carreras.Id})" class="card-img-top rounded-start" alt="..." height="200">
                            <div class="card-body">
                                <h5 class="card-title">@carreras.Nombre</h5>
                                <p class="card-text" style="display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">@carreras.Descripcion</p>

                                <div class="row justify-content-end mr-2 mt-2">
                                    <a class="form-control btn btn-outline-primary" data-id="@carreras.Id">Elegir Carrera</a>
                                </div>
                            </div>

                        </div>
                    </div>
                }

                <input type="hidden" id="IdCarrera" name="IdCarrera" class="form-control" />

            </div>

        </div>
        <div class="tab">
            <h2>Elección de Campus</h2>
            <div class="col-12 col-md-4">
                <div class="mt-3">
                    <label>Campus</label>
                    <select id="campus" class="form-control bg-light outline-none  shadow-none" name="IdCampus">
                    </select>
                </div>

            </div>
        </div>

        <div style="overflow:auto;">
            <div style="float:right;">
                <button type="button" id="prevBtn" onclick="nextPrev(-1)" class="btn btn-danger mt-2">Anterior</button>
                <button type="button" id="nextBtn" onclick="nextPrev(1)" class="btn btn-success mt-2">Siguiente</button>

            </div>
        </div>

    }
</div>



<script src="~/Scripts2/FormStep.js"></script>
<script src="~/Scripts2/Locacion.js"></script>
<script src="~/Scripts2/AsiganarCampus.js"></script>


